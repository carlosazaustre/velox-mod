<script>
  document.addEventListener('DOMContentLoaded', loadFiles, false);

  function loadFiles() {
    loadCSS('//fonts.googleapis.com/css?family=Roboto+Slab:300,400,700%7CLato:300,700,800,900');
    loadCSS('//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css');
    loadJS('//cdnjs.cloudflare.com/ajax/libs/zepto/1.1.4/zepto.min.js')
    loadJS('{{asset "lib/prism/prism.js"}}');
    loadJS('{{asset "lib/fitvid/jquery.fitvid.js"}}');
    loadJS('//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-54e489d6305b1d7a');

    window.addEventListener('load', function() {
      Prism.highlightAll();
      $("body").fitVids();
    });
  }

  function loadJS(src) {
    'use strict';
    var ref = window.document.getElementsByTagName("script")[0];
    var script = window.document.createElement("script");
    script.src = src;
    script.async = true;
    ref.parentNode.insertBefore(script, ref);

    return script;
  }

  function loadCSS(href, before, media) {
    'use strict';
    var ss = window.document.createElement('link');
    var ref = before || window.document.getElementsByTagName("script")[0];

    ss.rel = "stylesheet";
    ss.href = href;
    ss.media = "only x";
    ref.parentNode.insertBefore( ss, ref );

    setTimeout( function(){
      ss.media = media || "all";
    });

    return ss;
  }
</script>
