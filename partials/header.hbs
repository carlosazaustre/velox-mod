<header class="main-header text center">
  {{#if @blog.cover}}

  <div class="cover" style="background-image: url({{@blog.cover}})">
    <div class="cover-mask padding">
      {{#if @blog.logo}}
      <nav>
        <a href="{{@blog.url}}" class="inline blog-logo-extra-border border circle">
          <!--<img src="{{@blog.logo}}" alt="{{@blog.title}}" class="ui small centered circular image bordered" />-->
          <div class="ui rotate reveal">
            <div class="visible content">
              <img src="{{@blog.logo}}" class="ui small bordered circular image">
            </div>
            <div class="hidden content">
              <img src="http://upload.wikimedia.org/wikipedia/commons/6/6a/JavaScript-logo.png" class="ui small bordered circular image">
            </div>
          </div>
        </a>
      </nav>
      {{/if}}
      <div class="site_width">
        <div class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></div>
        <p class="blog-description">Blog sobre tecnologías web: HTML5, CSS, JavaScript, Angular.js, Node.js, MongoDB.</p>
        {{> "social"}}
        <div class="margin-top">
          <a href="http://carlosazaustre.es/blog/sobre-mi/">Sobre mí</a> |
          <a href="http://carlosazaustre.es/blog/curriculum/">Currículum</a> |
          <a href="http://carlosazaustre.es/blog/ebook-angular/">eBooks</a> |
          <a href="http://www.redbubble.com/people/carlos-azaustre/shop">Camisetas Geeks</a>
        </div>
      </div>
    </div>
</div>

{{else}}

<div class="no-cover site_width padding border solid bottom">
  {{#if @blog.logo}}
  <nav>
    <a href="{{@blog.url}}" class="inline blog-logo-extra-border border circle">
      <img src="{{@blog.logo}}" alt="{{@blog.title}}" class="ui small centered circular image bordered" />
    </a>
  </nav>
  {{/if}}
  <div class="site_width">
    <div class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></div>
    <p class="blog-description">{{@blog.description}}</p>
  </div>

  {{> "social"}}
  <div class="margin-top">
    <a href="http://carlosazaustre.es/blog/sobre-mi/">Sobre mí</a> |
    <a href="http://carlosazaustre.es/blog/curriculum/">Currículum</a> |
    <a href="http://carlosazaustre.es/blog/ebook-angular/">eBooks</a> |
    <a href="http://www.redbubble.com/people/carlos-azaustre/shop">Camisetas Geeks</a>
  </div>
</div>

{{/if}}
</header>
