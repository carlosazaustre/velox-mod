{{#foreach posts}}

<article class="padding">
  <header class="excerpt">
    <h4><a href="{{url}}">{{{title}}}</a></h4>
  </header>

  <div>
    <p>{{excerpt words="40"}} <a href="{{url}}"><span class="fa fa-angle-double-right"></span></a></p>
  </div>

  <footer class="author">
    {{#if author.image}}
    <div class="author-thumb inline middle">
      <img src="https://s3-eu-west-1.amazonaws.com/carlosazaustre-blog/carlos-azaustre-desarrollo-y-formacion-web.png" alt="Carlos Azaustre" class="border circle" />
    </div>
    {{/if}}

    <div class="inline middle">
      Escrito por {{author}} |
      <span class="fa fa-folder-open-o"></span>
      Archivado en
      {{tags}}
      <time datetime="{{date format='DD-MM-YYYY'}}">
        {{date format="DD, MMMM, YYYY"}}
      </time>
    </div>
  </footer>
</article>
<hr/>

{{/foreach}}
{{> "newsletter"}}

{{pagination}}
