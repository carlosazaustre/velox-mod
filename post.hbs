{{!< default}}

{{#post}}

{{#if image}}

<header>
  <div class="cover" style="background-image: url({{image}})">
    <div class="cover-mask">
      <div class="blog-info">
        <div class="author">
          {{#if author.image}}<img src="{{author.image}}" alt="Author image" class="border circle inline" />{{/if}}
          <div class="inline">{{author}}</div>
        </div>

        <div class="title"><a class="text bold" href="{{@blog.url}}">{{@blog.title}}</a></div>
      </div>

      <div class="post-cover site_width site_width padding">
        <h1>{{{title}}}</h1>
        <time datetime="{{date format='YYYY-MM-DD'}}">
          <span class="fa fa-calendar-o"></span>
          {{date format="dddd, MMMM DD, YYYY"}}
        </time>
      </div>
    </div>
  </div>
</header>

{{else}}

{{> "header"}}

{{/if}}

<main class="site_width padding" role="main">
  <article class="{{post_class}}">
    {{#if image}}
    {{else}}
    <header class="post-header">
      <h1>{{{title}}}</h1>
      <time datetime="{{date format='YYYY-MM-DD'}}">
        <span class="fa fa-calendar"></span>
        {{date format="dddd, MMMM DD, YYYY"}}
      </time>
    </header>
    {{/if}}

    <div class="entry margin_bottom">
      {{content}}
    </div>

    <section class="share">
      <h5>Comparte este art√≠culo</h5>
      <a class="fa-stack fa-lg"
         href="https://twitter.com/share?text={{encode title}}&nbsp;by&nbsp;@carlosazaustre&amp;url={{url absolute="true"}}"
         onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
      </a>
      <a class="fa-stack fa-lg"
         href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
         onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
      </a>
      <a class="fa-stack fa-lg"
         href="https://plus.google.com/share?url={{url absolute="true"}}"
         onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-google-plus fa-stack-1x fa-inverse"></i>
      </a>
    </section>

    <footer class="author-post relative margin_top">
      {{#if author}}
      <h5>Autor</h5>
      {{#if author.image}}
      <div class="author-thumb inline middle">
        <img src="{{author.image}}" alt="Author image" class="border circle" />
      </div>
      {{/if}}

      <div class="inline middle align vertical">
        <div>{{author}}</div>
        <div>{{author.bio}}</div>
      </div>

      {{/if}}
    </footer>

    {{!
      Here, you can add disqus comment.
      Also go to partials/disqus-comment to set your SHORTNAME.
    }}
    {{> disqus-comment}}
  </article>
</main>

{{/post}}
